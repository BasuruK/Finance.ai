{
  "scripts": {
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "security:check": "npm audit --audit-level=high",
    "security:outdated": "npm outdated",
    "security:audit-safe": "npm audit || exit 0",
    "security:outdated-safe": "npm outdated || exit 0",
    "security:full-scan": "npm run security:audit-safe && npm run security:outdated-safe && echo 'Security scan complete'"
  }
}